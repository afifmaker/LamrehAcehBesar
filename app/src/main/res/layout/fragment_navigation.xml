<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:ignore="HardcodedText">

    <View
        android:id="@+id/viewRoad"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:background="#37474F"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="6dp"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@drawable/bg_dashed_line"
        app:layout_constraintStart_toStartOf="@id/viewRoad"
        app:layout_constraintEnd_toEndOf="@id/viewRoad"/>

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/navigation"
        app:tint="@color/teal_primary"
        android:background="@drawable/bg_circle_icon"
        android:backgroundTint="@color/white"
        android:padding="14dp"
        android:elevation="6dp"
        android:contentDescription="Ikon Navigasi User"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.65"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="48dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/teal_primary"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iconTurn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:srcCompat="@drawable/right_arrow"
                android:scaleType="fitCenter"
                app:tint="@color/white"
                android:background="@drawable/bg_card_rounded"
                android:backgroundTint="#30FFFFFF"
                android:padding="12dp"
                android:contentDescription="Ikon Belok Kanan"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="18dp">

                <TextView
                    android:text="100 meter lagi"
                    android:textColor="#E0F2F1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Belok Kanan"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Menuju Jalan Bukit Lamreh"
                    android:textColor="#B2DFDB"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="32dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="24dp"
            android:paddingVertical="20dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:text="ESTIMASI TIBA"
                    android:textSize="11sp"
                    android:letterSpacing="0.05"
                    android:textStyle="bold"
                    android:textColor="@color/gray_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom">
                    <TextView
                        android:text="15"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:text=" min"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_text"
                        android:layout_marginBottom="4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/btnEndNav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AKHIRI"
                android:textColor="#F44336"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/bg_search_rounded"
                android:backgroundTint="#20F44336"
                android:paddingHorizontal="24dp"
                android:paddingVertical="12dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/iconCompass"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/bg_circle_icon"
        android:backgroundTint="@color/white"
        android:padding="14dp"
        android:src="@drawable/direction"
        app:tint="#37474F"
        android:elevation="6dp"
        android:contentDescription="Ikon Kompas Arah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>