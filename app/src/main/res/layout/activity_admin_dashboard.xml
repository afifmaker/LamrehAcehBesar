<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:text="Admin Dashboard"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>
            
        <TextView
            android:text="Kelola Data:"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Button Kelola Sejarah -->
        <Button
            android:id="@+id/btnManageSejarah"
            android:text="Kelola Sejarah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Button Kelola Kebencanaan -->
        <Button
            android:id="@+id/btnManageKebencanaan"
            android:text="Kelola Kebencanaan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Button Kelola Wisata -->
        <Button
            android:id="@+id/btnManageWisata"
            android:text="Kelola Wisata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Button Kelola Ekowisata -->
        <Button
            android:id="@+id/btnManageEkowisata"
            android:text="Kelola Ekowisata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <!-- Button Kelola Geopark -->
        <Button
            android:id="@+id/btnManageGeopark"
            android:text="Kelola Geopark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnLogout"
            android:text="Logout"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
            
    </LinearLayout>
</ScrollView>