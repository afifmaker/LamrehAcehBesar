<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg"
    tools:ignore="HardcodedText, ContentDescription">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DDDDDD" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/navigation"
                app:tint="@color/teal_primary"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mulai Navigasi Rute"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvTargetWisata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tujuan: Pantai Pasir Putih Lhok Me"
                android:textSize="14sp"
                android:textColor="@color/gray_text"
                android:layout_marginBottom="24dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStartNavigasi"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Mulai Navigasi (GPS)"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/btn_fill_teal" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnStartAR"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Mulai Navigasi AR (Augmented Reality)"
                android:textAllCaps="false"

                android:textColor="@color/teal_primary"
                android:textSize="16sp"
                android:textStyle="bold"

                android:background="@drawable/btn_outline_teal"

                android:layout_marginTop="12dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>